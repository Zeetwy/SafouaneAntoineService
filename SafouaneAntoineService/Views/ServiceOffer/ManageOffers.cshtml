﻿@{
    ViewData["Title"] = "ManageOffers";
}
@if (!string.IsNullOrEmpty((string)TempData["Message"]))
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<div class="text-center">
    <a class="btn" asp-controller="ServiceOffer" asp-action="PublishOffer">Publish Offer</a>
    <!-- List off offers START -->
    <table class="table">
        <tr>
            <th>Type</th>
            <th>Description</th>
            <th>Category</th>
        </tr>
    @foreach (var offer in Model)
    {
        <tr>
            <td>@offer.Type</td>
            <td>@offer.Description</td>
            <td>@offer.Category.Name</td>
            <td><a class="btn btn-outline-secondary" asp-controller="ServiceRendered" asp-action="ViewRequests" asp-route-offer_id="@offer.Id">Requests</a></td>
            <td><a class="btn btn-outline-danger" asp-controller="ServiceOffer" asp-action="DeleteOffer" asp-route-id="@offer.Id">Delete</a></td>
        </tr>
    }
    </table>
    <!-- List off offers END -->
</div>