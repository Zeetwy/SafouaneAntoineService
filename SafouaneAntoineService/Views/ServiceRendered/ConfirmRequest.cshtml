@model SafouaneAntoineService.ViewModels.ServiceRenderedViewModel

@{
    ViewData["Title"] = "Confirm Service";
}

<h1>Confirm Service</h1>

<form method="post" asp-controller="ServiceRendered" asp-action="ConfirmRequest">
    <table>
        <tr>
            <td><label asp-for="Date"></label></td>
            <td><input asp-for="Date"></td>
            <td><span asp-validation-for="Date" class="text-danger"></span></td>
        </tr>

        <tr>
            <td><label asp-for="NumberOfHours"></label></td>
            <td><input type="number" asp-for="NumberOfHours"></td>
            <td><span asp-validation-for="NumberOfHours" class="text-danger"></span></td>
        </tr>

        <tr>
            <td><input class="btn" type="submit" value="Confirm" /></td>
        </tr>
    </table>
    <a class="btn" style="border: 3px solid black" asp-controller="ServiceOffer" asp-action="ManageOffers">Return</a>
</form>
