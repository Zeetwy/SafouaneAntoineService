@model List<ServiceRendered>

@if (!string.IsNullOrEmpty((string)TempData["Message"]))
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

@if (Model is not null)
{
    <table class="table">
        <tr>
            <th>Status</th>
            <th>Date</th>
            <th>Number of hours</th>
        </tr>

        @foreach (ServiceRendered sr in Model)
        {
            <tr>
                <td>@sr.Servicestatus</td>
                <td>@sr.Date</td>
                <td>@sr.NumberOfHours</td>
                <td> <a asp-controller="ServiceRendered" asp-action="Details" asp-route-id="@sr.Id">Validate</a></td>
            </tr>
        }


    </table>
}
else
{
    <div class="alert alert-danger">
        There is not services rendered to you.
    </div>
}